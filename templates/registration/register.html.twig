{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="container-fluid overflow-hidden text-center">
    <div class="row gx-5">
        <div class="col text-center">
            <div class="p-5">
                <h1>Création de votre compte Liste de Courses</h1>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col text-center">
            <img src="{{ asset('build/images/panier.png') }}" class="img-fluid" alt="Shopping list logo">
        </div>
    </div>
    <div class="row">
        <div class="col-3">
        </div>
        <div class="col-6 text-lg-start p-5">
            {{ form_start(registrationForm) }}
            <div class="mb-3">
                {{ form_row(registrationForm.email, {
                    label: 'E-mail'
                }) }}
            </div>
            <div class="mb-3">
                {{ form_row(registrationForm.username, {
                    label: 'Nom d\'utilsateur'
                }) }}
            </div>
            <div class="mb-3">
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Mot de passe'
                }) }}
            </div>
            <div class="mb-3">
                {{ form_row(registrationForm.agreeTerms, {
                    label: 'Acception d\'utilisation des données personnelles'
                }) }}
            </div>

            <button type="submit" class="btn btn-primary">S'enregistrer</button>
            {{ form_end(registrationForm) }}
        </div>
    </div>
</div>
{% endblock %}
